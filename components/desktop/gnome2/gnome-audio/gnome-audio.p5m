# Transforms
<transform file path=usr.*/man/.+ -> default mangler.man.stability uncommitted>

set name=pkg.fmri value=pkg://sonicle.com/gnome/gnome-audio@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=variant.opensolaris.zone value=global value=nonglobal
set name=description value="GNOME audio files"
set name=info.classification value="org.opensolaris.category.2008:System/Multimedia Libraries"
set name=pkg.description value="GNOME audio files"
set name=pkg.summary value="GNOME audio files"
set name=info.upstream-url value="http://gnome.org/"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license gnome-audio.license license="Creative Commons"

dir path=usr
