file path=usr/share/sounds/error.wav
file path=usr/share/sounds/generic.wav
file path=usr/share/sounds/gtk-events/activate.wav
file path=usr/share/sounds/gtk-events/clicked.wav
file path=usr/share/sounds/gtk-events/toggled.wav
file path=usr/share/sounds/info.wav
file path=usr/share/sounds/panel/slide.wav
file path=usr/share/sounds/phone.wav
file path=usr/share/sounds/question.wav
file path=usr/share/sounds/shutdown1.wav
file path=usr/share/sounds/startup3.wav
file path=usr/share/sounds/warning.wav
link path=usr/share/sounds/login.wav target=startup3.wav
